<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @using Portfolio.Models
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        @Html.ActionLink("Naming Is Hard", "Index", "Home", null, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                @if (Session["UserRoleID"] == null)
                {
                    <li class="nav-item active">@Html.ActionLink("Register", "Register", "User", null, new { @class = "nav-link" })</li>
                    <li class="nav-item active">@Html.ActionLink("Login", "Login", "User", null, new { @class = "nav-link" })</li>
                }
                else
                {
                    <li class="nav-item active">@Html.ActionLink("Profile", "UserProfile", "User", new UserViewModel(), new { @class = "nav-link" })</li>
                    <li class="nav-item active">@Html.ActionLink("Create Story", "CreateStory", "Story", null, new { @class = "nav-link" })</li>
                    <li class="nav-item active">@Html.ActionLink("Logout", "Logout", "User", null, new { @class = "nav-link" })</li>
                }
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit" onclick="">Search</button>
            </form>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <div class="copy-footer fixed-bottom bg-primary">
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
