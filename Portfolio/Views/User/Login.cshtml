@model Portfolio.Models.UserViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div class="container">

        <div class="form-group">

            @Html.LabelFor(m => m.singleUser.userName)
            @Html.EditorFor(m => m.singleUser.userName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.singleUser.userName)

        </div>

        <div class="form-group">

            @Html.LabelFor(m => m.singleUser.userPassword)
            @Html.PasswordFor(m => m.singleUser.userPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.singleUser.userPassword)

        </div>

    </div>

    <input type="submit" class="btn-success" value="Login" />
}